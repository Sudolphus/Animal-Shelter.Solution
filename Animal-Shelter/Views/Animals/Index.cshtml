@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animals>;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h4>No Animals are listed at our shelter</h4>
}
<ol>
  @foreach(Animal animal in Model)
  {
    <li>@Html.ActionLink($"{animal.Name}, {animal.Breed}", "Details", new { id = animal.AnimalId})</li>
  }
</ol>

