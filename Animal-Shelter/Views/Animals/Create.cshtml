@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add An Animal:</h4>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.DateOfAdmittance)
    @Html.TextBoxFor(model => model.DateOfAdmittance, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Gender)
    @Html.TextBoxFor(model => model.Gender, new { @class = "form-control"})
  </div>
  <input type="submit" value="Add New Animal" class="btn btn-success">
}
<p>@Html.ActionLink("Show all Animals", "Index")</p>